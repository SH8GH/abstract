{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "composite": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./resources/js/*"]
    }
  },
  "include": [
    "./resources/js/**/*.ts",
    "./resources/js/**/*.tsx",
    "./config/inertia.ts",
    "./adonisrc.ts"
  ]
}
